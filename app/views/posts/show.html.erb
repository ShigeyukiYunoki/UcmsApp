<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル</strong>
  <%= @post.title %>
</p>

<p>
  <strong>時間</strong>
  <%= @post.start_time.strftime("%Y%m%d") %>
</p>

<p>
  <strong>内容</strong>
  <%= @post.content %>
</p>

<% if @post.user_id == current_user.id %>
  <%= link_to "Edit", edit_post_path(@post), data: {"turbolinks" => false} %>
<% end %>

<%= link_to "Back", "/posts/#{@post.user_id}/index?start_date=#{@post.start_time.strftime("%Y-%m-%d")}",
 data: {"turbolinks" => false} %>
