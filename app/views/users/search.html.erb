<% provide(:title,"SearchResult") %>
<div class="container">
  <h2 class="mb-3 text-center">検索結果</h2>

  <div class="text-center">
    <%= search_form_for @q, url: search_users_path do |f| %>
    <%= f.label :name_cont, 'ユーザーは見つかりましたか？', class: 'lead' %>
    <div class="row my-4">
      <div class="col-9">
        <%= f.search_field :name_cont, class: "form-control", placeholder: "ユーザー名に含まれる文字を入力"  %>
      </div>
      <div class="col-3">
        <%= f.submit '検索', class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="mx-3">
    <ul class="list-group bg-transparent">
      <%= render @results %>
    </ul>
  </div>

  <div class="d-flex justify-content-center pt-5">
    <%= paginate @users %>
  </div>
</div>
