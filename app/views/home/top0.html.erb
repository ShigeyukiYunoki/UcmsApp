<% if logged_in? %>

  <div class="row">
    <aside class="col-md-3 text-center">
      <section class="mx-auto">

        <%= gravatar_for current_user, 150 %>
        <h3 class="my-3"><%= link_to current_user.name, "/users/#{current_user.id}", data: {"turbolinks" => false}, class: "none-deco"%></h3>
        <%= link_to '今日の服薬完了！', root_path, data: {"turbolinks" => false}, class: "btn btn-primary btn-block mb-3" %>
        <h2>現在の連続服薬日数</h2>
        <p class="display-3 text-primary"><%= @days %></p>

        <h2>最高連続服薬記録</h2>
        <p class="display-3 text-primary"><%= @max_days %></p>
      </section>

      <!-- <h4><%= current_user.email %></h4> -->
      <h4 class="my-3"><%= current_user.seriousness %></h4>

      <%= link_to edit_user_path(current_user), data: {"turbolinks" => false}, class: "btn btn-outline-primary",method: :get do %>
      <i class="fas fa-user-edit fa-lg"></i>
      プロフィールの編集
    <% end %>

    <section class="my-3">
      <%= render 'shared/stats' %>
    </section>

    <%= link_to new_post_path, data: {"turbolinks" => false}, class:"btn btn-outline-info mb-5 btn-block btn-lg",method: :get do %>
    <i class="fas fa-feather-alt fa-lg mr-3"></i>日記をかく
  <% end %>

</aside>

<div class="col-md-9">
  <div class="row my-3 text-center">
    <h2 class="col-4">投稿(<%= current_user.feed.count %>)</h2>
    <div class="col-7">
      <%= link_to "/posts/#{current_user.id}/index?start_date=#{Date.today.strftime("%Y-%m-%d")}&post_index=0", data: {"turbolinks" => false}, class: "btn btn-success btn-block", method: :get do %>
      <i class="far fa-calendar-alt fa-lg mr-xs-3"></i>
      カレンダーで投稿をみる
    <% end %>
  </div>
</div>

<%= render 'shared/feed' %>
</div>

<% else %>
